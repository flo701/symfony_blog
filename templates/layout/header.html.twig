{# header.html.twig #}

{# - Préparer dans header.html.twig, un bouton "cheatsheet" à la place du bouton déjà présent "home", et créer un lien hypertexte vers la route index_cheatsheet de notre Controller via la fonction Twig path(). #}

	<header>
	<!-- Fixed navbar -->
		<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark"> <div class="container-fluid">
			<a class="navbar-brand" href="{{ path('app_index') }}">SymfonyBlog</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarCollapse">
				<ul class="navbar-nav me-auto mb-2 mb-md-0">
					{% if app.request.get('_route') != 'index_cheatsheet' %}
						<li class="nav-item">
							<a class="nav-link active" href="{{ path('index_cheatsheet') }}">Cheatsheet</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link disabled">Cheatsheet</a>
						</li>
					{% endif %}
					{% if categories is defined %}
						{% for selectedCategory in categories %}
							<li class="nav-item">
								<a class="nav-link active" href="{{ path('index_category', {'categoryName' : selectedCategory.category }) }}">{{ selectedCategory.category|capitalize }}</a>
							</li>
							{# | est un pipe et capitalize est un filtre #}
						{% endfor %}
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
</header>
